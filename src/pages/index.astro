<style>
  .app {
    height: 100vh;
    width: 100vw;
    display: grid;
    grid-template-rows: auto 1fr auto;
    overflow: hidden;
  }

  /* Navigation - minimal style */
  .nav {
    padding: 2rem 3rem;
  }

  .nav-list {
    list-style: none;
    display: flex;
    justify-content: center;
    gap: 3rem;
  }

  .nav-item {
    background: none;
    border: none;
    color: var(--color-text-muted);
    font-family: var(--font-main);
    font-size: 1rem;
    font-weight: 600;
    padding: 0.5rem 0;
    cursor: pointer;
    position: relative;
    transition: color 0.3s ease;
  }

  .nav-item::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--color-accent);
    transition: width 0.3s ease, background 0s 0.3s;
  }

  .nav-item:hover {
    color: var(--color-accent-secondary);
  }

  .nav-item.active {
    color: var(--color-accent);
  }

  .nav-item:hover::after {
    width: 100%;
    background: var(--color-accent-secondary);
    transition: width 0.3s ease, background 0s;
  }

  .nav-item.active::after {
    width: 100%;
    background: var(--color-accent);
  }

  /* Content */
  .content {
    position: relative;
    overflow: hidden;
  }

  .panel {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem 4rem;
    opacity: 0;
    transform: translateY(20px);
    pointer-events: none;
    transition: opacity 0.5s ease, transform 0.5s ease;
  }

  .panel.active {
    opacity: 1;
    transform: translateY(0);
    pointer-events: auto;
  }

  .panel-inner {
    max-width: 650px;
    text-align: center;
  }

  .panel-title {
    font-size: 2.5rem;
    font-weight: 800;
    color: var(--color-accent);
    margin-bottom: 1.5rem;
    letter-spacing: -0.02em;
  }

  .panel-desc {
    color: var(--color-text-muted);
    margin-bottom: 2rem;
  }

  /* Logo */
  .logo-img {
    width: 90%;
    max-width: 1000px;
    height: auto;
  }

  /* About */
  .panel-inner p {
    margin-bottom: 1.25rem;
    line-height: 1.9;
    font-size: 1.05rem;
  }

  .about-list {
    list-style: none;
    display: inline-flex;
    flex-direction: column;
    gap: 0.5rem;
    margin-top: 1.5rem;
    text-align: left;
  }

  .about-list li {
    font-size: 1rem;
    color: var(--color-text-muted);
  }

  .bullet {
    color: var(--color-accent);
    margin-right: 0.75rem;
  }

  .bullet.teal {
    color: var(--color-accent-secondary);
  }

  /* YouTube */
  .youtube-panel {
    max-width: 900px;
    width: 100%;
  }

  .video-carousel {
    display: flex;
    gap: 1.25rem;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    scroll-behavior: smooth;
    padding: 0.5rem 0 1.5rem;
    margin-bottom: 1.5rem;
    -webkit-overflow-scrolling: touch;
  }

  /* Subtle scrollbar - appears on hover */
  .video-carousel::-webkit-scrollbar {
    height: 4px;
  }

  .video-carousel::-webkit-scrollbar-track {
    background: transparent;
  }

  .video-carousel::-webkit-scrollbar-thumb {
    background: transparent;
    border-radius: 2px;
    transition: background 0.3s ease;
  }

  .video-carousel:hover::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.2);
  }

  .video-carousel:hover::-webkit-scrollbar-thumb:hover {
    background: rgba(255, 255, 255, 0.35);
  }

  .video-card {
    flex-shrink: 0;
    width: 240px;
    scroll-snap-align: start;
  }

  .video-card a {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .video-thumbnail {
    aspect-ratio: 16/9;
    background: linear-gradient(135deg, #3d444b 0%, #292F36 100%);
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 0.75rem;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .video-card:hover .video-thumbnail {
    transform: scale(1.03);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3);
  }

  .play-icon {
    font-size: 2rem;
    color: var(--color-accent-secondary);
    opacity: 0.7;
    transition: opacity 0.3s ease, color 0.3s ease;
  }

  .video-card:hover .play-icon {
    opacity: 1;
    color: var(--color-accent);
  }

  .video-title {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-text);
    line-height: 1.4;
    text-align: left;
    transition: color 0.3s ease;
  }

  .video-card:hover .video-title {
    color: var(--color-accent-secondary);
  }

  .btn {
    display: inline-block;
    padding: 0.875rem 2.5rem;
    background: var(--color-accent);
    color: var(--color-bg);
    font-weight: 700;
    font-size: 1rem;
    border-radius: 50px;
    transition: all 0.3s ease;
  }

  .btn:hover {
    background: var(--color-accent-secondary);
    transform: translateY(-2px);
    opacity: 1;
  }

  /* Keyboards */
  .keyboard-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
    max-width: 500px;
    margin: 0 auto;
  }

  .keyboard-card {
    background: var(--color-bg-secondary);
    border-radius: 12px;
    padding: 1.25rem;
    text-align: left;
    transition: transform 0.3s ease;
  }

  .keyboard-card:hover {
    transform: translateY(-4px);
  }

  .keyboard-img {
    aspect-ratio: 16/10;
    background: linear-gradient(135deg, #3d444b 0%, #292F36 100%);
    border-radius: 8px;
    margin-bottom: 1rem;
  }

  .keyboard-card h3 {
    margin-bottom: 0.25rem;
    font-weight: 700;
    color: var(--color-accent-secondary);
  }

  .keyboard-card span {
    color: var(--color-text-muted);
    font-size: 0.875rem;
  }

  /* Links */
  .links-grid {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
  }

  .link-card {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.25rem 2rem;
    background: var(--color-bg-secondary);
    border-radius: 12px;
    color: var(--color-text);
    transition: all 0.3s ease;
  }

  .link-card:hover {
    transform: translateY(-4px);
    background: var(--color-accent-secondary);
    color: var(--color-bg);
    opacity: 1;
  }

  .link-card:hover .link-icon {
    color: var(--color-bg);
  }

  .link-icon {
    font-size: 1.5rem;
    color: var(--color-accent-secondary);
  }

  .link-name {
    font-weight: 700;
  }

  /* Footer */
  .footer {
    padding: 1.5rem;
    text-align: center;
    color: var(--color-text-muted);
    font-size: 0.875rem;
  }

  /* Hamburger button - hidden on desktop */
  .hamburger {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    z-index: 100;
  }

  .hamburger-line {
    display: block;
    width: 24px;
    height: 2px;
    background: var(--color-text);
    margin: 5px 0;
    transition: transform 0.3s ease, opacity 0.3s ease;
  }

  /* Hamburger animation when open */
  .hamburger.open .hamburger-line:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
  }

  .hamburger.open .hamburger-line:nth-child(2) {
    opacity: 0;
  }

  .hamburger.open .hamburger-line:nth-child(3) {
    transform: rotate(-45deg) translate(5px, -5px);
  }

  /* Responsive */
  @media (max-width: 640px) {
    .nav {
      padding: 1rem;
      display: flex;
      justify-content: flex-end;
      position: relative;
    }

    .hamburger {
      display: block;
    }

    .nav-list {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      background: var(--color-bg);
      flex-direction: column;
      align-items: center;
      gap: 0;
      padding: 1rem 0 0.5rem;
      transform: translateY(-100%);
      z-index: 50;
    }

    .nav-list.open {
      transform: translateY(0);
      transition: transform 0.3s ease;
    }

    .nav-list li {
      width: 100%;
      text-align: center;
    }

    .nav-item {
      display: block;
      width: 100%;
      padding: 1rem;
      font-size: 1.1rem;
    }

    .nav-item::after {
      display: none;
    }

    .nav-item:hover,
    .nav-item.active {
      background: var(--color-bg);
    }

    .panel {
      padding: 1.5rem;
    }

    .panel-title {
      font-size: 2rem;
    }

    .keyboard-grid {
      grid-template-columns: 1fr;
      max-width: 280px;
    }

    .links-grid {
      flex-direction: column;
      align-items: center;
    }

    .logo-img {
      width: 100%;
    }

    .video-card {
      width: 200px;
    }

    .video-carousel {
      padding-left: 0.5rem;
      padding-right: 0.5rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const navItems = document.querySelectorAll('.nav-item');
    const panels = document.querySelectorAll('.panel');
    const hamburger = document.querySelector('.hamburger');
    const navList = document.querySelector('.nav-list');

    // Hamburger menu toggle
    hamburger?.addEventListener('click', () => {
      hamburger.classList.toggle('open');
      navList?.classList.toggle('open');
      hamburger.setAttribute('aria-expanded',
        hamburger.classList.contains('open').toString()
      );
    });

    navItems.forEach(item => {
      item.addEventListener('click', () => {
        const tab = item.getAttribute('data-tab');

        // Update nav
        navItems.forEach(nav => nav.classList.remove('active'));
        item.classList.add('active');

        // Update panels with fade
        panels.forEach(panel => {
          if (panel.getAttribute('data-panel') === tab) {
            panel.classList.add('active');
          } else {
            panel.classList.remove('active');
          }
        });

        // Close mobile menu after selection
        hamburger?.classList.remove('open');
        navList?.classList.remove('open');
        hamburger?.setAttribute('aria-expanded', 'false');
      });
    });
  });
</script>
