---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Programming, Infrastructure, IaC, and Mechanical Keyboard ASMR" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700;800&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" />
    <link rel="preload" href="/logo.svg" as="image" />
    <link rel="preload" href="/logo-light.svg" as="image" />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --color-bg: #292F36;
    --color-bg-secondary: #323a42;
    --color-text: #fffcf9;
    --color-text-muted: #F6F4F3;
    --color-accent: #FD8850;
    --color-accent-secondary: #3AAFB9;
    --font-main: 'Nunito', 'Arial Rounded MT Bold', 'Arial', sans-serif;
  }

  /* Light mode - system preference */
  @media (prefers-color-scheme: light) {
    :root:not([data-theme="dark"]) {
      --color-bg: #fffcf9;
      --color-bg-secondary: #F6F4F3;
      --color-text: #292F36;
      --color-text-muted: #323a42;
    }
  }

  /* Manual theme overrides */
  :root[data-theme="light"] {
    --color-bg: #fffcf9;
    --color-bg-secondary: #F6F4F3;
    --color-text: #292F36;
    --color-text-muted: #323a42;
  }

  :root[data-theme="dark"] {
    --color-bg: #292F36;
    --color-bg-secondary: #323a42;
    --color-text: #fffcf9;
    --color-text-muted: #F6F4F3;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html, body {
    font-family: var(--font-main);
    background: var(--color-bg);
    color: var(--color-text);
    height: 100vh;
    overflow: hidden;
    line-height: 1.6;
    transition: background 0.4s ease, color 0.4s ease;
  }

  body::before {
    content: '';
    position: fixed;
    bottom: -5%;
    right: -5%;
    width: 40%;
    height: 80%;
    background-image: url('/keycapr.png');
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center right;
    opacity: 0.06;
    pointer-events: none;
    z-index: 0;
    transition: opacity 0.5s ease;
  }

  body.hide-bg::before {
    opacity: 0;
  }

  @media (max-width: 640px) {
    body::before {
      bottom: -15%;
    }
  }

  a {
    color: var(--color-accent);
    text-decoration: none;
    transition: opacity 0.2s;
  }

  a:hover {
    opacity: 0.8;
  }

  ::selection {
    background: var(--color-accent);
    color: var(--color-bg);
  }
</style>
