---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Programming, Infrastructure, IaC, and Mechanical Keyboard ASMR" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700;800&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" />
    <link rel="preload" href="/logo.svg" as="image" />
    <link rel="preload" href="/logo-light.svg" as="image" />
    <title>{title}</title>
    <script is:inline>
      (function() {
        var saved = localStorage.getItem('theme');
        if (saved) {
          document.documentElement.setAttribute('data-theme', saved);
        }
      })();
    </script>
  </head>
  <body class="hide-bg">
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --color-bg: #292F36;
    --color-bg-secondary: #323a42;
    --color-text: #fffcf9;
    --color-text-muted: #F6F4F3;
    --color-accent: #FD8850;
    --color-accent-secondary: #3AAFB9;
    --font-main: 'Nunito', 'Arial Rounded MT Bold', 'Arial', sans-serif;
  }

  /* Light mode - system preference or manual toggle */
  @media (prefers-color-scheme: light) {
    :root:not([data-theme="dark"]) {
      --color-bg: #fffcf9;
      --color-bg-secondary: #F6F4F3;
      --color-text: #292F36;
      --color-text-muted: #323a42;
    }
  }

  :root[data-theme="light"] {
    --color-bg: #fffcf9;
    --color-bg-secondary: #F6F4F3;
    --color-text: #292F36;
    --color-text-muted: #323a42;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html, body {
    font-family: var(--font-main);
    background: var(--color-bg);
    color: var(--color-text);
    height: 100vh;
    overflow: hidden;
    line-height: 1.6;
    transition: background 0.4s ease, color 0.4s ease;
  }

  body::before {
    content: '';
    position: fixed;
    bottom: -18%;
    right: -3%;
    width: 40%;
    height: 80%;
    background-image: url('/keycapr.png');
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center right;
    opacity: 0.2;
    pointer-events: none;
    z-index: 0;
    transition: opacity 0.5s ease;
  }

  body.hide-bg::before {
    opacity: 0;
  }

  @media (max-width: 640px) {
    body::before {
      bottom: -15%;
    }
  }

  a {
    color: var(--color-accent);
    text-decoration: none;
    transition: opacity 0.2s;
  }

  a:hover {
    opacity: 0.8;
  }

  ::selection {
    background: var(--color-accent);
    color: var(--color-bg);
  }

  /* App layout */
  .app {
    height: 100vh;
    width: 100vw;
    display: grid;
    grid-template-rows: auto 1fr auto;
    overflow: hidden;
  }

  .content {
    position: relative;
    overflow: hidden;
  }

  /* Panel system */
  .panel {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem 4rem;
    opacity: 0;
    transform: translateY(20px);
    pointer-events: none;
    transition: opacity 0.5s ease, transform 0.5s ease;
  }

  .panel.active {
    opacity: 1;
    transform: translateY(0);
    pointer-events: auto;
  }

  .panel-inner {
    max-width: 650px;
    text-align: center;
  }

  .panel-title {
    font-size: 2.5rem;
    font-weight: 800;
    color: var(--color-accent);
    margin-bottom: 1.5rem;
    letter-spacing: -0.02em;
  }

  .panel-desc {
    color: var(--color-text-muted);
    margin-bottom: 2rem;
  }

  .panel-inner p {
    margin-bottom: 1.25rem;
    line-height: 1.9;
    font-size: 1.05rem;
  }

  /* Carousel card (shared between YouTube & Keyboards) */
  .carousel-card {
    flex-shrink: 0;
    width: 300px;
    scroll-snap-align: start;
    padding-left: 0.5rem;
  }

  .carousel-card a {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .carousel-card a:hover {
    opacity: 1;
  }

  .carousel-card-img {
    background: linear-gradient(135deg, var(--color-bg-secondary) 0%, var(--color-bg) 100%);
    border-radius: 8px;
    box-shadow: 4px 4px 8px rgba(0, 0, 0, 0.2);
    margin-bottom: 0.75rem;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .carousel-card:hover .carousel-card-img {
    transform: scale(1.03);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3);
  }

  .carousel-card-title {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-text);
    line-height: 1.4;
    text-align: left;
    transition: color 0.3s ease;
  }

  .carousel-card:hover .carousel-card-title {
    color: var(--color-accent-secondary);
  }

  @media (max-width: 640px) {
    .panel {
      padding: 1.5rem;
    }

    .panel-title {
      font-size: 2rem;
    }

    .carousel-card {
      width: 260px;
    }
  }
</style>
