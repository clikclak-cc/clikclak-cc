---
import '@fontsource/nunito/400.css';
import '@fontsource/nunito/600.css';
import '@fontsource/nunito/700.css';
import '@fontsource/nunito/800.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Programming, Infrastructure, IaC, and Mechanical Keyboard ASMR" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#292F36" media="(prefers-color-scheme: dark)" />
    <meta name="theme-color" content="#fffcf9" media="(prefers-color-scheme: light)" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" />
<title>{title}</title>
    <script is:inline>
      (function() {
        var saved = localStorage.getItem('theme');
        if (saved) {
          document.documentElement.setAttribute('data-theme', saved);
          var color = saved === 'light' ? '#fffcf9' : '#292F36';
          document.querySelectorAll('meta[name="theme-color"]').forEach(function(m) { m.content = color; });
        }
      })();
    </script>
  </head>
  <body class="hide-bg">
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --color-bg: #292F36;
    --color-bg-secondary: #323a42;
    --color-text: #fffcf9;
    --color-text-muted: #F6F4F3;
    --color-accent: #FD8850;
    --color-accent-secondary: #3AAFB9;
    --font-main: 'Nunito', 'Arial Rounded MT Bold', 'Arial', sans-serif;
  }

  /* Light mode - system preference or manual toggle */
  @media (prefers-color-scheme: light) {
    :root:not([data-theme="dark"]) {
      --color-bg: #fffcf9;
      --color-bg-secondary: #F6F4F3;
      --color-text: #292F36;
      --color-text-muted: #323a42;
    }
  }

  :root[data-theme="light"] {
    --color-bg: #fffcf9;
    --color-bg-secondary: #F6F4F3;
    --color-text: #292F36;
    --color-text-muted: #323a42;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html, body {
    font-family: var(--font-main);
    background: var(--color-bg);
    color: var(--color-text);
    height: 100vh;
    overflow: hidden;
    line-height: 1.6;
    transition: background 0.4s ease, color 0.4s ease;
  }

  body::before {
    content: '';
    position: fixed;
    bottom: -18%;
    right: -3%;
    width: 40%;
    height: 80%;
    background-image: url('/keycapr.png');
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center right;
    opacity: 0.2;
    pointer-events: none;
    z-index: 0;
    transition: opacity 0.5s ease;
  }

  body.hide-bg::before {
    opacity: 0;
  }

  @media (max-width: 640px) {
    body::before {
      bottom: -15%;
    }
  }

  a {
    color: var(--color-accent);
    text-decoration: none;
    transition: opacity 0.2s;
  }

  a:hover {
    opacity: 0.8;
  }

  ::selection {
    background: var(--color-accent);
    color: var(--color-bg);
  }

  /* App layout */
  .app {
    height: 100vh;
    width: 100vw;
    display: grid;
    grid-template-rows: auto 1fr auto;
    overflow: hidden;
  }

  .content {
    position: relative;
    overflow: hidden;
  }

</style>
