---
import Panel from './Panel.astro';
import Carousel from './Carousel.astro';
import CarouselCard from './CarouselCard.astro';
import type { Video } from '../data/youtube';

interface Props {
  videos: Video[];
}

const { videos } = Astro.props;
---

<Panel id="youtube" innerClass="youtube-panel">
  <h2>YouTube</h2>
  <p class="panel-desc">
    Hands-on videos on infrastructure and coding, accompanied by the satisfying sounds of mechanical keyboards.
  </p>
  <Carousel wrapperClass="youtube-carousel-wrapper" carouselClass="video-carousel">
    {videos.length > 0 ? (
      videos.map((video) => (
        <CarouselCard class="video-card">
          <a href={video.url} target="_blank" rel="noopener noreferrer">
            <div class="carousel-card-img video-thumbnail">
              <img src={video.thumbnail} alt={video.title} loading="lazy" />
              <span class="play-icon">▶</span>
            </div>
            <h3 class="carousel-card-title">{video.title}</h3>
          </a>
        </CarouselCard>
      ))
    ) : (
      <CarouselCard class="video-card placeholder">
        <div class="carousel-card-img video-thumbnail">
          <span class="play-icon">▶</span>
        </div>
        <h3 class="carousel-card-title">Coming Soon...</h3>
      </CarouselCard>
    )}
  </Carousel>
  <a href="https://www.youtube.com/@clikclak_cc" class="btn" target="_blank" rel="noopener noreferrer">
    Visit Channel →
  </a>
</Panel>

<style>
  .youtube-panel {
    max-width: 900px;
    width: 100%;
  }

  .video-carousel {
    margin-bottom: 1.5rem;
  }

  .video-thumbnail {
    aspect-ratio: 16/9;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .video-thumbnail img {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .play-icon {
    font-size: 2rem;
    color: var(--color-accent-secondary);
    opacity: 0;
    transition: opacity 0.3s ease, color 0.3s ease;
    position: relative;
    z-index: 1;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.5);
  }

  .video-card:hover .play-icon {
    opacity: 1;
    color: var(--color-accent);
  }

  .video-card.placeholder .play-icon {
    opacity: 0.7;
  }

  .btn {
    display: inline-block;
    padding: 0.875rem 2.5rem;
    background: var(--color-accent);
    color: var(--color-bg);
    font-weight: 700;
    font-size: 1rem;
    border-radius: 50px;
    transition: all 0.3s ease;
  }

  .btn:hover {
    background: var(--color-accent-secondary);
    transform: translateY(-2px);
    opacity: 1;
  }
</style>
