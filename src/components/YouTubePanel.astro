---
import Carousel from './Carousel.astro';
import type { Video } from '../data/youtube';

interface Props {
  videos: Video[];
}

const { videos } = Astro.props;
---

<section class="panel" data-panel="youtube">
  <div class="panel-inner youtube-panel">
    <h2 class="panel-title">YouTube</h2>
    <p class="panel-desc">
      Hands-on videos on infrastructure and coding, accompanied by the satisfying sounds of mechanical keyboards.
    </p>
    <Carousel wrapperClass="youtube-carousel-wrapper" carouselClass="video-carousel">
      {videos.length > 0 ? (
        videos.map((video) => (
          <div class="video-card">
            <a href={video.url} target="_blank" rel="noopener noreferrer">
              <div class="video-thumbnail">
                <img src={video.thumbnail} alt={video.title} loading="lazy" />
                <span class="play-icon">▶</span>
              </div>
              <h3 class="video-title">{video.title}</h3>
            </a>
          </div>
        ))
      ) : (
        <div class="video-card placeholder">
          <div class="video-thumbnail">
            <span class="play-icon">▶</span>
          </div>
          <h3 class="video-title">Coming Soon...</h3>
        </div>
      )}
    </Carousel>
    <a href="https://www.youtube.com/@clikclak_cc" class="btn" target="_blank" rel="noopener noreferrer">
      Visit Channel →
    </a>
  </div>
</section>

<style>
  .youtube-panel {
    max-width: 900px;
    width: 100%;
  }

  .video-carousel {
    margin-bottom: 1.5rem;
  }

  .video-card {
    flex-shrink: 0;
    width: 300px;
    scroll-snap-align: start;
    padding-left: 0.5rem;
  }

  .video-card a {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .video-card a:hover {
    opacity: 1;
  }

  .video-thumbnail {
    aspect-ratio: 16/9;
    background: linear-gradient(135deg, #3d444b 0%, #292F36 100%);
    border-radius: 8px;
    box-shadow: 4px 4px 8px rgba(0, 0, 0, 0.2);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 0.75rem;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .video-thumbnail img {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .video-card:hover .video-thumbnail {
    transform: scale(1.03);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3);
  }

  .play-icon {
    font-size: 2rem;
    color: var(--color-accent-secondary);
    opacity: 0;
    transition: opacity 0.3s ease, color 0.3s ease;
    position: relative;
    z-index: 1;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.5);
  }

  .video-card:hover .play-icon {
    opacity: 1;
    color: var(--color-accent);
  }

  .video-card.placeholder .play-icon {
    opacity: 0.7;
  }

  .video-title {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-text);
    line-height: 1.4;
    text-align: left;
    transition: color 0.3s ease;
  }

  .video-card:hover .video-title {
    color: var(--color-accent-secondary);
  }

  .btn {
    display: inline-block;
    padding: 0.875rem 2.5rem;
    background: var(--color-accent);
    color: var(--color-bg);
    font-weight: 700;
    font-size: 1rem;
    border-radius: 50px;
    transition: all 0.3s ease;
  }

  .btn:hover {
    background: var(--color-accent-secondary);
    transform: translateY(-2px);
    opacity: 1;
  }

  @media (max-width: 640px) {
    .video-card {
      width: 260px;
    }
  }
</style>
