---
import Panel from './Panel.astro';
---

<Panel id="about">
  <h2>About</h2>
  <div class="features">
    <div class="feature">
      <i class="fa-solid fa-code feature-icon"></i>
      <div class="feature-keyword accent">Code</div>
      <div class="feature-desc">Programming & IaC<br>Tutorials</div>
    </div>
    <div class="feature">
      <i class="fa-solid fa-headphones feature-icon"></i>
      <div class="feature-keyword accent">ASMR</div>
      <div class="feature-desc">Typing ASMR</div>
    </div>
    <div class="feature">
      <i class="fa-solid fa-keyboard feature-icon"></i>
      <div class="feature-keyword accent">Keyboard</div>
      <div class="feature-desc">Mechanical Keyboard</div>
    </div>
  </div>
</Panel>

<style>
  .features {
    display: flex;
    justify-content: center;
    gap: 2.5rem;
  }

  .feature {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .feature-icon {
    font-size: 2rem;
    margin-bottom: 0.5rem;
    color: var(--color-text);
    transition: transform 0.2s ease, color 0.3s ease;
  }

  .feature:hover .feature-icon {
    transform: translateY(-3px);
    color: var(--color-accent-secondary);
  }

  .feature-keyword {
    font-weight: 700;
    margin-bottom: 0.25rem;
  }

  .feature-keyword.accent {
    color: var(--color-accent);
  }

  .feature-keyword.teal {
    color: var(--color-accent-secondary);
  }

  .feature-desc {
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }

  @media (max-width: 640px) {
    .features {
      flex-direction: column;
      align-items: center;
      gap: 2rem;
    }
  }
</style>
